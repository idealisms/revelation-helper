{
  "name": "Revelation Reader",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Decodes revelation files.",
  "icons": {
    "16": "revelation16.png",
    "48": "revelation48.png"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "revelation32.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.dropbox.com/home*"],
      "js": ["content_script.js"]
    }
  ]
}
